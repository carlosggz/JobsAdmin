<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jobs Admin</title>
    <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/lib/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        var JobsAdmin = {
            jobStatus: [],
            notificationTypes: []
        };

        @foreach(var status in EnumHelpers.GetAsNameValue(typeof(JobsAdmin.Core.Contracts.JobStatus)))
        {
            @:JobsAdmin.jobStatus[@status.Key] = "@status.Value";
        }

        @foreach(var notificationType in EnumHelpers.GetAsNameValue(typeof(JobsAdmin.Core.Contracts.NotificationType)))
        {
            @:JobsAdmin.notificationTypes[@notificationType.Key] = "@notificationType.Value";
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
